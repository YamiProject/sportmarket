<div class="container-fluid">
    <header class="row justify-content-center">
       <div class="row col-12 justify-content-around bg-light py-1">
            <div class="col-lg-4 col-12 row justify-content-start">
                <button class="btn col-lg-4 py-2 my-1 col-12 btn-light" onclick="location.href='/sendpay'">Оплата и доставка</button>
                <button class="btn col-lg-3 py-2 my-1 col-12 btn-light" id="yakor" onclick="location.href='/contacts'">Контакты</button>
            </div>
            <div class="col-lg-3 col-12 row justify-content-center">
                {{#if ('isnotundefined' sessionExist)}}
                    <button class="btn py-2 my-1 col-lg-2 col-12 btn-light" onclick="location.href='/profile'"><img src="/img/profile.png" alt="" style="height: 20px; width: 20px"></button>
                    <button class="btn py-2 my-1 col-lg-2 col-12 btn-light" onclick="location.href='/basket'"><img src="/img/basket.png" alt="" style="height: 20px; width: 20px"></button>
                {{else}}
                    <button class="btn py-2 my-1 col-lg-4 col-12 btn-light" onclick="location.href='/log'">Вход</button>
                    <button class="btn py-2 my-1 col-lg-5 col-12 btn-light" onclick="location.href='/reg'">Регистрация</button>
                {{/if}}
           </div>
       </div>
       <div class="col-12 bg-dark py-3">
            <div class="row justify-content-center">
                <button class="btn my-1 btn-dark col-lg-1 col-12" onclick="location.href='/'">Главная</button>
                <button class="btn my-1 btn-dark col-lg-1 col-12" onclick="location.href='/catalog'">Каталог</button>
                <form action="/search" class="row col-lg-7 col-12 justify-content-center" method="GET">
                    <input type="search" name="qwety" class="form-control col-9 col-lg-8 ml-1 my-1" placeholder="Поиск...">
                    <button class="btn btn-dark col-lg-1 col-2">Найти</button>
                </form>
            </div>
       </div>
    </header>
</div>